<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chdm.convertor.MainActivity"
    android:background="#adebfb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textViewOutputP1_P2"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Число в системе счисления P=10"
            android:id="@+id/textViewP1_P2"
            android:layout_marginTop="5dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarP1_P2"
            android:max="14"
            android:secondaryProgressTint="#000000"
            android:progressTint="#50d0de"
            android:thumbTint="#50d0de"
            android:progress="8"
            android:layout_marginTop="5dp"/>


        <TextView
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textViewOutputP2_P1"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Число в системе счисления P=10"
            android:id="@+id/textViewP2_P1"
            android:layout_marginTop="5dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarP2_P1"
            android:max="14"
            android:thumbTint="#50d0de"
            android:progressTint="#50d0de"
            android:secondaryProgressTint="#000000"
            android:progress="8"
            android:layout_marginTop="5dp"
            android:indeterminate="false" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableLayout"
        android:backgroundTint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="227dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/buttonA"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/buttonB"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/buttonC"
                android:layout_column="3"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/buttonD"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button_7"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button_8"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button_9"
                android:layout_column="3"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:id="@+id/buttonE"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button_4"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button_5"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button_6"
                android:layout_column="3"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/buttonF"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"
                android:enabled="false" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button_1"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button_2"
                android:layout_column="2"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button_3"
                android:layout_column="3"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="#bbe6dc" />
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BS"
                android:id="@+id/buttonBS"
                android:layout_column="4"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff0000"
                android:backgroundTint="#5cc9ed" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8">
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button_0"
                android:layout_column="1"
                android:layout_weight="2"
                android:layout_span="2"
                android:gravity="center"
                android:backgroundTint="#bbe6dc"/>
            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/buttonDot"
                android:layout_column="2"
                android:layout_weight="2"
                android:gravity="center"
                android:backgroundTint="#5cc9ed" />

            <Button
                android:onClick="onButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CL"
                android:id="@+id/buttonCL"
                android:layout_column="3"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#ff0000"
                android:backgroundTint="#5cc9ed" />
        </TableRow>
    </TableLayout>
</RelativeLayout>